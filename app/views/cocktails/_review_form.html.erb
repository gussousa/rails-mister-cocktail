<%= simple_form_for [ @cocktail, @review ] do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content, rows: 5, class: "form-control" %>
  <%= f.label :rating %>
  <%= f.number_field :rating, name: "Rating", min: 0, max: 5, class: "form-control"  %>
  <%= f.submit "Submit review", class: "btn-custom" %>
<% end %>