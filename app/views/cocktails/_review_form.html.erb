<%= simple_form_for [ @cocktail, @review ] do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content, rows: 5, class: "form-control mb-3" %>
  <%= f.label :rating %>
  <%= f.number_field :rating, min: 0, max: 5, class: "form-control mb-3"  %>
  <%= f.submit "Submit review", class: "btn btn-custom" %>
<% end %>