<div class="container">
  <div class="row align-conten-center">
    <div class="col col-6  m-0 align-items-center">
      <div class="row m-0 center">
        <div class="large-img center" style="background-image: url('<%= @cocktail.img_url %>')">
        </div>
      </div>
      <div class="row m-0">
        <h1 class="center"><%= @cocktail.name %> <%= link_to ("<i class='fas fa-pencil-alt'></i>").html_safe, edit_cocktail_path %><%= link_to ("<i class='fas fa-eraser'></i>").html_safe, 
                                  cocktail_path(@cocktail),
                                  method: :delete,
                                  data: { confirm: "Do you really want to erase this cocktail?" } %>

        </h1>
      </div>
    </div>
    <div class="col-6 ml-n5 pt-4 align-items-center">
      <div class="row m-0">
        <div class="cocktails_ingredients">
          <h2>Ingredients:</h2>
          <hr>
          <ul>
            <% @doses.each do |dose| %>
              <li><strong><%= dose.description %></strong> of <%= dose.ingredient.name %> <%= link_to ("<i class='fas fa-eraser'></i>").html_safe, 
                                  dose_path(dose),
                                  method: :delete,
                                  data: { confirm: "Do you really want to erase this ingredient?" } %></li>
            <% end %>
          </ul>
          <hr>
        </div>
      </div>
      <div class="add_ingredients">
        <h2>Add ingredients:</h2>
        <hr>
        <%= render "ingredient_form" %>
      </div>
    </div>
  </div>
</div>